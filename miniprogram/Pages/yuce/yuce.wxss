/* miniprogram/Pages/fazhanyuce/fazhanyuce.wxss */
Page {
  background: #e4e4e4;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.pig {
  width: 100%;
  height: 500rpx;
  background: #46B8FF;
}

.btn-group{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top: -100rpx;
  width: 550rpx;
  height: 400rpx;
  background: white;
  justify-content: center;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 25rpx 0 rgba(151, 215, 255, 0.678)
}

.btn {
  width: 500rpx;
  margin: 20rpx;
  background: #46B8FF;
  border-radius: 10rpx;
  color: white;
  box-shadow: 0 5rpx 10rpx 0 rgba(151, 215, 255, 0.678);
  transition: all 0.1s;
}

.btn:active {
  box-shadow: 0 5rpx 30rpx 0 rgb(151, 215, 255)
}

.line {
  height: 1px;
  width: 200rpx;
  background: grey;
}