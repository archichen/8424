/* miniprogram/Pages/overview/overview.wxss */
page {
  height: 100%;
  background: #FF4081;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.student_card {
  position: absolute;
  top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 80%;
  height: 350rpx;
  color: white;
  border-radius: 20rpx;
  background: radial-gradient(circle, hsl(167, 50%, 56%),#009688);
}

.scroll-panel {
  margin-top: 200rpx;  
  border-top-left-radius: 100rpx;
  border-top-right-radius: 100rpx;
  background: white;
  overflow: visible;
  flex: 1;
  padding-top: 200rpx;
}

.footer-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer {
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.line {
  width: 100%;
  height: 1px;
  background: #868686;
}

.foot-text {
  font-size: 30rpx;
  width: 300rpx;
  text-align: center;
  color: #868686;
}

.comment-panel {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.comment {
  margin-left: 30rpx;
  color: #606060;
}

.image_text_wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}

.student_info_view {
  display: flex;
  flex-direction: column;
}

.head_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 160rpx;
}

.name {
  font-size: 60rpx;
}

.student_card .line {
  background: white;
  margin-bottom: 25rpx;
  margin-top: 25rpx;
}

.scores {
  display: flex;
  justify-content: space-around;
  margin-bottom: 25rpx;
}

.small_font {
  font-size: 30rpx;
}

.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 50rpx;
  width: 95%;
}

.item .content {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item .content .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item .content .title .point {
  width: 45rpx;
  height: 45rpx;
}

.item .content .title .text {
  font-size: 26rpx;
  color: #606060;
}

.description {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #606060;
}

.right-arrow {
  width: 90rpx;
  height: 90rpx;
}