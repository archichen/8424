/* miniprogram/Pages/authorized/authorized.wxss */
.authorized-page {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.card-top {
  height: 45%;
  width: 100%;
  background: radial-gradient(circle,#87a1f9, #6f8bf3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-learn {
  height: 300rpx;
  width: 300rpx;
}

.card-bottom {
  width: 100%;
  flex-basis: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.float-login-box {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  min-height: 500rpx;
  top: 25%;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10px 20px 0 #e3e9fd;
}

.login-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.icon-wechat {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.footer {
  width: 100%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.line {
  width: 100%;
  height: 1px;
  background: #dadbdb;
}

.foot-text {
  font-size: 30rpx;
  width: 200rpx;
  text-align: center;
  color: #dadbdb;
}

.btn-wechat-authorized {
  margin: 0;
  padding: 0;
  background-color: transparent;
}

.btn-wechat-authorized::after {
  border: none;
}

.view-input {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
}

.icon-input {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

input {
  line-height: 70rpx;
  height: 70rpx;
  width: 90%;
  color: #515151;
  border-bottom: 1px solid #dadbdb;
}

/* .input-placeholder {
  padding-left: 30rpx;
} */

.btn-login {
  width: 400rpx;
  height: 100rpx;
  border-radius: 300rpx;
  background: radial-gradient(circle,#87a1f9, #6f8bf3);
  color: white;
  margin-top: 30rpx;
}

.btn-login::after {
  border: none;
}